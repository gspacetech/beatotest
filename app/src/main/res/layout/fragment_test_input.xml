<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".pages.FragmentTestInput">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#252525"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:text="Blood Glucose"/>


        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:isb_max="500"
            app:isb_min="30"
            app:isb_progress="0"
            app:isb_seek_smoothly="true"
            app:isb_ticks_count="2"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_marks_drawable="@mipmap/ic_launcher"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/color_blue"
            app:isb_thumb_color="@color/color_green"
            app:isb_thumb_size="40dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/color_gray"
            app:isb_indicator_text_color="@color/colorAccent"
            app:isb_indicator_text_size="20sp"
            app:isb_track_background_color="@color/color_gray"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/color_blue"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:gravity="center"
            android:text="Scroll to select"
            android:layout_marginBottom="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9E9E9">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spnReadingType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </RelativeLayout>





    </LinearLayout>

    <Button
        android:id="@+id/btnSaveTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="#6BCA00"
        android:textColor="#fff"
        android:text="Save Test" />


</RelativeLayout>